<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TabButtonActivity">


    <CheckBox
        android:id="@+id/ck_select"
        android:layout_width="173dp"
        android:layout_height="82dp"
        android:text="选定标签按钮"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_tab_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_tab_button"
        app:layout_constraintTop_toTopOf="@+id/tv_tab_button" />

    <TextView
        android:id="@+id/tv_tab_button"
        style="@style/TabButton"
        android:layout_width="164dp"
        android:layout_height="87dp"
        android:layout_gravity="center"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="140dp"
        android:drawableTop="@drawable/tab_first_selector"
        android:text="点我"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>